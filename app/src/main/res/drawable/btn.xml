<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#3399ff"
                    android:startColor="#0066ff" />
                <!-- 上面就是为了实现渐变颜色 ，下面是点击时圆角的弧度设置。在这里我只是简单的把颜色的顺序颠倒了下，如果有指定的需求，还要按照需求操作-->
                <corners
                    android:bottomLeftRadius="5.0dip"
                    android:bottomRightRadius="5.0dip"
                    android:radius="2.0dip"
                    android:topLeftRadius="5.0dip"
                    android:topRightRadius="5.0dip" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#0066ff"
                    android:startColor="#3399ff" />

                <corners
                    android:bottomLeftRadius="5.0dip"
                    android:bottomRightRadius="5.0dip"
                    android:radius="2.0dip"
                    android:topLeftRadius="5.0dip"
                    android:topRightRadius="5.0dip" />
            </shape>
        </item>
    </selector>
    <selector>
        <item
            android:state_pressed="false"
            android:color="@color/text_color_default">
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#0066ff"
                    android:startColor="#3399ff" />

                <corners
                    android:bottomLeftRadius="5.0dip"
                    android:bottomRightRadius="5.0dip"
                    android:radius="2.0dip"
                    android:topLeftRadius="5.0dip"
                    android:topRightRadius="5.0dip" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="270.0"
                    android:endColor="#0066ff"
                    android:startColor="#3399ff" />

                <corners
                    android:bottomLeftRadius="5.0dip"
                    android:bottomRightRadius="5.0dip"
                    android:radius="2.0dip"
                    android:topLeftRadius="5.0dip"
                    android:topRightRadius="5.0dip" />
            </shape>
        </item>
    </selector>

</inset>