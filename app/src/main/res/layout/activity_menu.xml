<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/button_listen"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="204dp"
        android:text="我要听"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_tell"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="77dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="204dp"
        android:text="我要讲"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button_listen"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_setting"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginBottom="197dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="67dp"
        android:text="设置"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_listen" />

    <Button
        android:id="@+id/button_quit"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginBottom="197dp"
        android:layout_marginEnd="77dp"
        android:layout_marginTop="67dp"
        android:text="退出"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_tell" />

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="235dp"
        android:layout_height="28dp"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="85dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/button_tell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>